{
    "compilerOptions": {
        "noEmit": true,
        "types": [
            "svelte"
        ],
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "Node",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,

        "baseUrl": ".",
        "paths": {
          "client/*": [ "source/*" ],
          "@ff/browser/*": [ "libs/ff-browser/source/*" ],
          "@ff/core/*": [ "libs/ff-core/source/*" ],
          "@ff/svc/*": [ "libs/ff-svc/source/*" ]
        }
    },
    "include": [
      "source/**/*"
    ]
}